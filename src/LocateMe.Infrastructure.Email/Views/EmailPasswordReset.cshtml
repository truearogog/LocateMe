@model LocateMe.Application.Abstractions.Email.EmailPasswordResetModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Reset Your Password</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333333;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 600px;
            margin: 40px auto;
            background-color: #ffffff;
            border-radius: 4px;
            padding: 20px;
        }

        .logo {
            text-align: center;
            margin-bottom: 30px;
        }

        .button {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 24px;
            font-size: 16px;
            color: #ffffff;
            background-color: #007bff;
            text-decoration: none;
            border-radius: 4px;
        }

        .footer {
            font-size: 12px;
            color: #999999;
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">
            <h2>@Model.CompanyName Logo</h2>
        </div>
        <h1>Reset Your Password</h1>
        <p>Hello @Model.RecipientName,</p>
        <p>
            We received a request to reset your @Model.CompanyName account password. Click the button below to reset it:
        </p>
        <p style="text-align:center;">
            <a class="button" href="@Model.ResetLink" target="_blank">Reset Password</a>
        </p>
        <p>
            If the button above does not work, you can copy and paste this link into your browser:
        </p>
        <p>@Model.ResetLink</p>
        <p>
            If you did not request this, you can safely ignore this email or contact our support team.
        </p>
        <div class="footer">
            <p>&copy; @Model.CurrentYear @Model.CompanyName. All rights reserved.</p>
        </div>
    </div>
</body>
</html>
